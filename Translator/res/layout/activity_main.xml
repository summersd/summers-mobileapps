<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.translator.MainActivity" >

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Your Language, Type Your Phrase, and Translate or Add the Words You Need to Translate!"
            android:textSize="16dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonSpanish"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="buttonLanguage"
            android:text="Spanish" />

        <Button
            android:id="@+id/buttonItalian"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="buttonLanguage"
            android:text="Italian" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editEnglish"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center"
            android:hint="Type Words to Translate Here" />

        <EditText
            android:id="@+id/editTranslate"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center"
            android:hint="Type New Translation or See Translation Here" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/buttonTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonTranslate"
            android:text="Translate" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonAddWord"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="buttonAddSpanishWordClicked"
            android:text="Add Spanish Word" />

        <Button
            android:id="@+id/button1"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="buttonAddItalianWordClicked"
            android:text="Add Italian Word" />
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonSpeak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonSpeakClicked"
            android:text="Speak" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClearClicked"
            android:text="Clear" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </TableRow>

</LinearLayout>
